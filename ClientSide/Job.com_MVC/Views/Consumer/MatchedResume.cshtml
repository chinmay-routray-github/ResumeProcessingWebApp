                </ul>
            </div>
        </div>
        <a class="nav-item mr-3 nav-link p-3" asp-controller="Home" asp-action="Index">Logout</a>
    </nav>
</div>

<div class="matched-resume">
    <div>
        <table class="table">
            <tr>
                <td> Job Id </td>
                <td> Resume Id</td>
                <td> Resumes</td>
                <td> Matching Score </td>
            </tr>
            @foreach (var resume in @Model)
            {
                <tr>
                    <td> @resume.JobId </td>
                    <td> @resume.ResumeId </td>
                    <td><a href="https://localhost:7129/Job.com/Consumer/Job/Download/@resume.ResumeId" download> @resume.FileName</a></td>
                    <td> @resume.MatchingScore </td>
                </tr>
            }
        </table>
    </div>
</div>
