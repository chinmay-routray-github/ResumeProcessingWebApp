@model JobSearchApp_MVC.Models.JobDetails

@{
    ViewData["Title"] = "Job.com";
}
<div class="navigation">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            @*<a class="navbar-brand" asp-controller="Home" asp-action="Index">JobSearchApp_MVC</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>*@
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Consumer" asp-action="Profile">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Consumer" asp-action="JobsCreated"> Jobs Created </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Consumer" asp-action="JobPosting"> JobPosting </a>
                    </li>
                </ul>
            </div>
        </div>
        <a class="nav-item mr-3 nav-link p-3" asp-controller="Home" asp-action="Index">Logout</a>
    </nav>
</div>

<div class="job-posting">
    <h4> @ViewBag.message </h4>

    <br />

    <div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="CreateJob" method="post">
                @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="form-group">
                    <label asp-for="JobTitle" class="control-label"> Job Title</label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="JobDescription" class="control-label">Job Description (Maximum 400 words)</label>
                @*<textarea asp-for="JobDescription" class="form-control" type="text" rows="10"/>*@
                    <textarea asp-for="JobDescription" class="form-control" type="text" rows="10"></textarea>
                <span asp-validation-for="JobDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="KeySkills" class="control-label">Key Skills (Maximum 30 words) </label>
                @*<textarea asp-for="KeySkills" class="form-control" type="text" rows="3"/>*@
                    <textarea asp-for="KeySkills" class="form-control" type="text" rows="3"> </textarea>
                <span asp-validation-for="KeySkills" class="text-danger"></span>
            </div>
            <div class="form-group">
                    <label asp-for="YearOfExperience" class="control-label">Year Of Experience</label>
                <input asp-for="YearOfExperience" class="form-control" />
                <span asp-validation-for="YearOfExperience" class="text-danger"></span>
            </div>
            <br />
            <div class="col-md-4">
                <div class="form-group">
                    <button id="button" type="submit" name="submit" formmethod="post" class="btn btn-success">Create</button> 
                    @*<a asp-action="CreateJob" class="btn btn-primary"> Create </a>*@
                </div>
            </div>
        </form>
    </div>
</div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</div>
